<h3>Edit Owner</h3>

<form class="form" action="/owners/<%= @owner.id %>" method="post">

  <label for="first_name">First Name:</label>
  <input type="text" name="first_name" id="first_name" value="<%= @owner.first_name %>"/>

  <label for="last_name">Last Name:</label>
  <input type="text" name="last_name" id="last_name" value="<%= @owner.last_name %>"/>

  <label for="age">Age:</label>
  <input type="text" name="age" id="age" value="<%= @owner.age %>"/>

  <label for="address">Address:</label>
  <input type="text" name="address" id="address" value="<%= @owner.address %>"/>


  <input type="submit" value="Update owner"/>

</form>
