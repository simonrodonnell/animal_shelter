<div class="form">
  <h3>Assign an owner to <%= @animal.name %></h3>
  <form action="/animals/<%= @animal.id %>/assign" method="post">

    Select owner:
    <select name="owner_id">
      <% for owner in @owners %>
      <option value="<%= owner.id %>"><%= owner.pretty_name %></option>
      <% end %>
    </select>

    <input type="submit"  value="Assign">

  </form>
</div>
