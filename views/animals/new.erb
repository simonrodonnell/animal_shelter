<div class="form">
<h3>New Animal</h3>
<form action="/animals" method="post">

<label for="name">Name:</label>
<input type="text" name="name" id="name"/>

<label for="age">Age:</label>
<input type="text" name="age" id="age"/>

<label for="animal_type_id">Species:</label>
<select name="animal_type_id" id="animal_type_id">
  <% for animal_type in @animal_types %>
  <option value="<%= animal_type.id %>"><%= animal_type.species %></option>
  <% end %>
</select>

<label for="admission_date">Date:</label>
<input type="date" name="admission_date" id="admission_date"/>

<label for="is_adoptable">Status:</label>
<select name="is_adoptable" id="is_adoptable">
  <option value=true>Ready for adoption</option>
  <option value=false>Not ready for adoption</option>
</select>

<label for="photo">Photo:</label>
<input type="text" name="photo" id="photo"/>

<input type="submit" value="Add New Animal"/>


</form>
</div>
