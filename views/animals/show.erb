<div class="card animal-card">
  <h3><%= @animal.name %></h3>
  <hr>
  <p>
    Age: <%= @animal.age %>
  </p>
  <p>
    Species: <%= @animal.species %>
  </p>
  <p>
    Admitted: <%= @animal.admission_date %>
  </p>
  <p>
    Healthy/Trained:
    <span class="<%= @animal.is_adoptable.to_s %>">
    </span>
  </p>
  <hr>
  <div class="card-buttons">
    <button type="button" name="button"><a href="/animals/<%= @animal.id %>/assign">ASSIGN OWNER</a></button>
    <button type="button" name="button"><a href="">EDIT</a></button>
    <form action="/animals/<%= @animal.id %>/delete" method="POST"><input type="submit" value="DELETE"></form>
    <form action="/animals/<%= @animal.id %>/status" method="POST"><input type="submit"
    <% if @animal.is_adoptable == "f" %>
      value="READY"
    <% else %>
      value="NOT READY"
    <% end %>
      ></form>
  </div>

</div>
