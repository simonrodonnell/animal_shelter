<p></p>
<p></p>
<div class="card animal-card">
  <h3><%= @animal.name %></h3>
  <img src="<%= @animal.photo %>" alt="Animal Photo" class="animal-photo">
  <p>
    <b>SPECIES: </b><%= @animal.species %>
  </p>
  <p>
    <b>AGE: </b><%= @animal.age %>
  </p>
  <p>
    <b>ADMITTED: </b><%= @animal.admission_date %>
  </p>
  <p>
    <b>HEALTHY/TRAINED: </b>
    <span class="<%= @animal.is_adoptable.to_s %>">
    </span>
  </p>
  <hr>
  <div>
    <button class="card-buttons" type="button" name="button">
      <a href="/animals/<%= @animal.id %>/assign" class="card-link">ASSIGN OWNER</a>
    </button>
    <button class="card-buttons" type="button" name="button">
      <a href="/animals/<%= @animal.id %>/edit" class="card-link">EDIT</a>
    </button>
    <form action="/animals/<%= @animal.id %>/delete" method="POST"><input type="submit" value="DELETE"></form>
    <form action="/animals/<%= @animal.id %>/status" method="POST"><input type="submit"
    <% if @animal.is_adoptable == "f" %>
      value="READY"
    <% else %>
      value="NOT READY"
    <% end %>
      ></form>
  </div>

</div>
