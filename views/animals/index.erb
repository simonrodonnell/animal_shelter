<h1>ANIMALS</h1>

<div class="index-nav"">
  <button type="button" name="button"><a href="animals/new">NEW ANIMAL</a></button>
</div>

<p></p>
<p></p>
<p></p>

<table>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Species</th>
      <th>Admission date</th>
      <th>Healthy/Trained</th>
    </tr>
    <% for animal in @animals %>
    <tr>
      <td><a href="/animals/<%= animal.id %>"><%= animal.name %></a></td>
      <td><%= animal.age %></td>
      <td><%= animal.species %></td>
      <td><%= animal.admission_date %></td>
      <td>
        <span class="<%= animal.is_adoptable.to_s %>"></span>
      </td>
    </tr>
    <% end %>
</table>
